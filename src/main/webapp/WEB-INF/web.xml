        <servlet-name>CheckoutPaymentServlet</servlet-name>
        <url-pattern>/CheckoutPaymentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>
